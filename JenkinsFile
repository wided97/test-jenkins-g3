pipeline {
    agent any

    stages {
        stage('Cloner le dépôt') {
            steps {
                git 'https://github.com/wided97/test-jenkins-g3.git'
            }
        }

        stage('Étape 1 : Vérification du dépôt') {
            steps {
                bat '''
                set PATH=%PATH%;"C:\\Program Files\\Git\\bin"
                echo === Étape 1 : Vérification du dépôt ===
                git status
                '''
            }
        }

        stage('Étape 2 : Afficher le contenu du projet') {
            steps {
                bat 'dir'
            }
        }

        stage('Étape 3 : Simuler un déploiement local') {
            steps {
                echo 'Simulation de déploiement local...'
            }
        }
    }

    post {
        failure {
            echo "Build KO"
        }
        success {
            echo "Build OK"
        }
    }
}
